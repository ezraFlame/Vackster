<section class="skills">
    {{#each skills as |skill id|}}
    <div class="skill item" data-item-id="{{_id}}">
        <input class="name inline-edit" type="text" data-field="name" value="{{name}}" />
        <input class="dnum stat inline-edit" type="text" data-field="data.dnum" value="{{data.dnum}}" /><h3>d</h3>
        <input class="dtype stat inline-edit" type="text" data-field="data.dtype" value="{{data.dtype}}" />
        <a class="item-delete">
            <i class="fas fa-trash"></i>
        </a>
    </div>
    {{/each}}
</section>